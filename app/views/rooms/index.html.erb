<h1 class="list-title">登録済み一覧</h1>
 
 <table class="list-table">
   <thead>
     <tr>
       <th>画像</th>
       <th>施設名</th>
       <th>紹介文</th>
       <th>料金</th>
       <th>作成日</th>
     </tr>
   </thead>
 
   <tbody>
     <% @rooms.each do |room| %>
       <tr>
         <td><%= image_tag room.image, size: "100x80"%></td>
         <td><%= link_to room.room_name, room_path(room) %></td>
         <td><%= room.room_details %></td>
         <td>¥<%= room.fee %>~</td>
         <td><%= room.created_at.to_s(:date_jp) %></td>
         <td><%= link_to "編集", edit_room_path(room) %></td>
         <td><%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
 
 <%= render 'shared/footer' %>
 