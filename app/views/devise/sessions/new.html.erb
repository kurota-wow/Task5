<div class="backimage">
  <div class="container">
    <h2 class="center">ログイン</h2>
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field  email-field">
        <%= f.label :email%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力" %>
      </div>
    
      <div class="field  password-field">
        <%= f.label :password, "パスワード"%><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力"%>
      </div>
    
      <div class="actions orange-btn">
        <%= f.submit "ログイン" %>
      </div>
      
    <% end %>
    
    <div>
      <%= link_to "新しいアカウントを作成", new_user_registration_path, class: 'post white-btn' %>
    </div>
  </div>
</div>
